<%= form_for @monster, url: monsters_path(@monster), html: { method: :post } do |f| %>
  <h1>ドラモン モンスターとうろくのしょ</h1>
  <p>モンスターのなまえ：<%= f.text_field :name %></p>
  <p>しゅぞく：<%= f.text_field :tribe %></p>
  <input type="submit" class="btn btn-outline-success" value="とうろく">
<% end %>
<br>
<%= link_to "モンスターいちらんへ", monsters_path %>
